    "version": "0.2.0",
    "configurations": [

        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/src/pocketn_nni_manager/app.py",
                "--server.port=8501",
                "--server.headless=true",
                "--server.enableStaticServing=true"
            ],
            "env": {
                "STREAMLIT_DATA_DIR" : "${workspaceFolder}/datadir"
            },
            "jinja": true,
            "autoStartBrowser": true
        }
    ]
}